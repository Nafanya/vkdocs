<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FixedSizeIcon">
        <item name="android:layout_width">@dimen/m_grid_9x</item>
        <item name="android:layout_height">@dimen/m_grid_9x</item>
        <item name="android:padding">@dimen/m_grid_1x</item>
    </style>

    <style name="EntryLabel">
        <item name="android:textAppearance">@style/TextAppearanceSecondary</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/m_grid_1x</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearancePrimary">
        <item name="android:textSize">@dimen/m_entry_text_size_primary</item>
        <item name="android:textColor">@color/m_entry_text_primary</item>
    </style>
    <style name="TextAppearanceSecondary">
        <item name="android:textSize">@dimen/m_entry_text_size_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/m_entry_text_secondary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/m_divider</item>
    </style>

    <!-- Divider with left icon margin -->
    <style name="Divider.SubSection" parent="Divider">
        <item name="android:layout_marginLeft">@dimen/m_grid_9x</item>
        <item name="android:layout_marginBottom">@dimen/m_grid_1x</item>
        <item name="android:layout_marginTop">@dimen/m_grid_1x</item>
    </style>

    <style name="ListEntryTitle">
        <item name="android:enabled">false</item>
        <item name="android:textSize">@dimen/m_entry_text_size_secondary</item>
        <item name="android:textColor">@color/m_app_primary_text</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ListEntryTitle.DocList" parent="@style/ListEntryTitle">
        <item name="android:textSize">@dimen/m_entry_text_size_primary</item>
        <item name="android:textColor">@color/m_entry_text_primary</item>
        <item name="android:layout_marginLeft">@dimen/m_grid_2x</item>
        <item name="android:layout_marginTop">@dimen/m_grid_2x</item>
    </style>
    <style name="ListEntryTitle.DocList.Relative" parent="@style/ListEntryTitle.DocList">
        <item name="android:layout_marginLeft">@dimen/m_grid_9x</item>
    </style>
    <style name="ListEntryTitle.BottomList" parent="@style/ListEntryTitle">
        <item name="android:textSize">@dimen/m_entry_text_size_primary</item>
        <item name="android:textColor">@color/m_entry_text_primary</item>
        <item name="android:layout_marginLeft">@dimen/m_grid_2x</item>
        <item name="android:layout_marginTop">@dimen/m_grid_2x</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ListEntryTitle.BottomList.Relative" parent="@style/ListEntryTitle.BottomList">
        <item name="android:layout_marginLeft">@dimen/m_grid_9x</item>
    </style>

    <style name="DialogOpenName">
        <item name="android:layout_marginTop">@dimen/m_grid_2x</item>
        <item name="android:textSize">@dimen/m_entry_text_size_primary</item>
        <item name="android:textColor">@color/m_entry_text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>
</resources>
